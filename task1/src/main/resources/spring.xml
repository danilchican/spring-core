<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.epam.danilchican.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="event" class="com.epam.danilchican.Event" scope="prototype">

        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>

        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>

    </bean>

    <bean id="eventLogger" class="com.epam.danilchican.logger.impl.ConsoleEventLogger"/>

    <bean id="app" class="com.epam.danilchican.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>
</beans>