<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="loggers.xml"/>

    <bean id="client" class="com.epam.danilchican.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
        <property name="greeting" value="Some greeting name"/>
    </bean>

    <bean id="event" class="com.epam.danilchican.event.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="app" class="com.epam.danilchican.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="eventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
        <property name="defaultLogger" ref="cacheFileEventLogger"/>
    </bean>
</beans>